<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:background="@color/white"
    android:focusable="true"
    android:checkable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- Title, secondary and supporting text -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="398dp"
                android:layout_height="96dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="115dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/avt"
                    android:gravity="bottom" />

                <TextView
                    android:id="@+id/suggest_content"
                    android:layout_width="200dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="@string/card_content"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="19dp"
                    android:layout_height="79dp"
                    android:layout_gravity="right"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="54dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.992"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/suggest_title"
                    android:layout_width="314dp"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:gravity="left"
                    android:text="@string/card_title"
                    android:textColor="@color/black"
                    android:textFontWeight="@integer/material_motion_duration_short_2" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/suggest_button"
            style="?attr/borderlessButtonStyle"
            android:layout_width="236dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:gravity="left"
            android:paddingTop="0dp"
            android:paddingRight="53dp"
            android:text="@string/card_button"
            android:textSelectHandleRight="@string/card_button"
            android:textColor="@color/orange"
            android:textSize="13dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>