<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/story_card"
    android:checkable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- Title, secondary and supporting text -->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_margin="0dp"
                android:gravity="center"
                android:text="Bài 5: KHÁI NIỆM VĂN MINH"
                android:textColor="@color/black"
                android:textFontWeight="@integer/material_motion_duration_short_2"
                android:textSize="25dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/story_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Theo dòng lịch sử hàng nghìn năm tiến trình văn minh thế giới được khắc ghi đậm nét bở các dấu ấn cá nhân, dân tộc hay của cả nhân loại. Những công trình kiến trúc, điêu khắc, hội họa.. của người xưa để lại phần nào phác họa được nét đặc sắc của các nền văn minh trong tiến trình lịch sử. Bài học sẽ giúp em khám phá những điều này."
            android:textColor="@color/black" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>